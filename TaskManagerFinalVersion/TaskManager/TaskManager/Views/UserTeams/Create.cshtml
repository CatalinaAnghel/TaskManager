@model TaskManager.DataAccess.DataModels.UserTeams

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styling{
    <link rel="stylesheet" href="~/css/form_styling.css" type="text/css" />
}

<h2 style="text-align: center; margin-top: 50px;">Add a user in a team</h2>
<hr />
<div class="row justify-content-center" id="form-row">
    <div class="col-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsersId" class="control-label">User:</label>
                <select asp-for="UsersId" class="form-control" asp-items="ViewBag.UsersId" required>
                    <option selected="selected">
                        Choose a user
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TeamsId" class="control-label">Team:</label>
                <select asp-for="TeamsId" class="form-control" asp-items="ViewBag.TeamsId" required>
                    <option selected="selected">
                        Choose a team
                    </option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Job" class="control-label">Enter the job:</label>
                <input asp-for="Job" class="form-control" required />
                <span asp-validation-for="Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="submit-button" />
            </div>
        </form>
    </div>
</div>