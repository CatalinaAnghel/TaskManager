@model IEnumerable<TaskManager.DataAccess.DataModels.Projects>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styling{
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

<div class="row" style="margin-top: 10%; overflow-x:auto;">
    <table class="table col-md-12">
        <caption>See your projects</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col" colspan="9" style="text-align: center; background-color: rgb(15, 64, 2); opacity: 0.6; color: white;"> Your projects</th>
            </tr>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    Start date
                </th>
                <th scope="col">
                    End date
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th scope="col">
                    Hours
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Difficulty)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Importance)
                </th>
                <th scope="col">
                </th>
            </tr>
        </thead>
        <tbody style="background-color: ghostwhite;">
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td id="description_area">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkedHours)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Difficulty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Importance)
                        </td>
                        <td><a asp-action="Details" asp-route-id="@item.ProjectsId">Details</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>You don't have projects...</td>
                </tr>
            }

        </tbody>
    </table>

</div>

<var id="var_item" style="display:none;">@ViewData["NoVisits"]</var>

<partial name="_WelcomeModalPartial" />

<button class="btn btn-primary" role="button" id="tasks-button">Show tasks</button>
<div class="row" id="info">
    <p class="col-md-3">You have @ViewData["UrgentTask"] urgent tasks.</p>
    <p class="col-md-4">You have @ViewData["UnfinishedTasks"] unfinished tasks.</p>
    <p class="col-md-3">You have @ViewData["FinishedTasks"] finished tasks.</p>
</div>

@section Scripts{
    <script src="~/js/dashboard.js" type="application/javascript"></script>
}