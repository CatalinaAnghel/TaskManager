@model TaskManager.Models.Badges

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_After_Login.cshtml";
}
<link rel="stylesheet" href="~/css/form_styling.css" type="text/css" />
<h2 style="text-align: center; margin-top: 50px;">Delete a badge</h2>
<hr />
<div class="row justify-content-center" id="form-row">
    <form asp-action="Delete" class="col-8">
        <div class="form-group">
            <label asp-for="BadgesId" class="control-label">Badge:</label>
            <select id="selected-badge" asp-for="BadgesId" class="form-control" asp-items="ViewBag.BadgesId" required>
                <option selected="selected">
                    Choose a badge
                </option>
            </select>
        </div>
        <input type="hidden" asp-for="BadgesId" />
        <br>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" id = "submit-button" />
        </div>
    </form>
</div>
