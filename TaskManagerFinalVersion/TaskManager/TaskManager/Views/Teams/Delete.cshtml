@model TaskManager.Models.Teams

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_After_Login.cshtml";
}
<link rel="stylesheet" href="~/css/form_styling.css" type="text/css" />
<h2 style="text-align: center; margin-top: 50px;">Delete a team</h2>
<hr />
<div class="row justify-content-center" id="form-row">
    <form asp-action="Delete" class="col-8">
        <div class="form-group">
            <label asp-for="TeamsId" class="control-label">Team:</label>
            <select id="selected-team" asp-for="TeamsId" class="form-control" asp-items="ViewBag.Teams">
                <option selected="selected">
                    Choose a team
                </option>
            </select>
        </div>
        <input type="hidden" asp-for="TeamsId" />
        <br />
        <div class="form-group">
            <input type="submit" value="Delete team" class="btn btn-primary" id="submit-button" />
        </div>
    </form>
</div>
