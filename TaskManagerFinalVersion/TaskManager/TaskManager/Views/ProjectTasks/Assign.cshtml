@model TaskManager.DataAccess.DataModels.ProjectTasks
@{
    ViewData["Title"] = "Assign task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styling{
    <link rel="stylesheet" href="~/css/form_styling.css" type="text/css" />
}

<h2 style="text-align: center; margin-top: 50px;">Assign a task to a user</h2>
<hr />
<div class="row justify-content-center" id="form-row">
    <div class="col-8">
        <form asp-action="Assign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Project</label>
                <select asp-for="ProjectId" id="select-project" class="form-control" asp-items="ViewBag.ProjectsId">
                    <option selected="selected">
                        Choose a project
                    </option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Task</label>
                <select id="select_task" asp-for="Name" class="form-control"></select>
            </div>
            <input type="hidden" asp-for="Name" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select id="select-user" class="form-control">Choose a project first</select>
                <input type="hidden" id="selected-user" value="" asp-for="UserId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" id="submit-button" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="~/js/tasks.js" type="application/javascript"></script>
}