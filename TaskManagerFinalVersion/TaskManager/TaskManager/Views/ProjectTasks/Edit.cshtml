@model TaskManager.DataAccess.DataModels.ProjectTasks

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styling{
    <link rel="stylesheet" href="~/css/form_styling.css" type="text/css" />
}

<h2 style="text-align: center; margin-top: 50px;">Update a task</h2>
<hr />
<div class="row justify-content-center" id="form-row">
    <div class="col-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProjectTasksId" class="control-label">Task</label>
                <select id="selected-task" asp-for="ProjectTasksId" class="form-control" asp-items="ViewBag.ProjectTasksId">
                    <option selected="selected">
                        Choose a task
                    </option>
                </select>
            </div>
            <input type="hidden" asp-for="ProjectTasksId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input id="name-field" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="description-field" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importance" class="control-label">Importance</label>
                <select asp-for="Importance" class="form-control" id="importance-field" required>
                    <partial name="_DropdownPartial" model="ViewBag.ImportanceLevelDropdown" />
                </select>
                <span asp-validation-for="Importance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueDate" class="control-label">Due date</label>
                <input id="due-date-field" asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" id="status-field" required>
                    <partial name="_DropdownPartial" model="ViewBag.StatusDropdown" />
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">User</label>
                <select id="user-field" asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input id="points-field" asp-for="Points" class="form-control" type="number" step="any" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update task" class="btn btn-primary" id="submit-button" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/tasks.js" type="application/javascript"></script>
}