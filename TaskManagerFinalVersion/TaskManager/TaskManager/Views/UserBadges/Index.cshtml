@model IEnumerable<TaskManager.DataAccess.DataModels.UserBadges>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Badge)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Badge.BadgesId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserBadgesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserBadgesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserBadgesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
